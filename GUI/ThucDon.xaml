<Page x:Class="GUI.ThucDon"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ThucDon">

    <Grid>
        <Grid VerticalAlignment="top" Height="50">
            <Button x:Name="countSelected" FontFamily="Montserrat" HorizontalAlignment="Right" Margin="0 0 10 0" VerticalAlignment="Center" Height="30"></Button>
        </Grid>
        <ListView x:Name="itemListView" HorizontalAlignment="Stretch" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="0,60,0,-104.4" Height="494">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4"  HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Canvas Height="235" Width="190" >
                        <StackPanel Canvas.Left="25">
                            <StackPanel Canvas.Left="0" Width="190">
                                <Image HorizontalAlignment="Center" Source="{Binding HinhAnh}" Width="156" Height="120" Margin="14,0,20.4,0"/>
                            </StackPanel>
                            <StackPanel  Canvas.Left="0" Canvas.Top="125" Width="190">
                                <TextBlock FontFamily="Montserrat" HorizontalAlignment="Center" Text="{Binding TenMon}" RenderTransformOrigin="0.51,0.095"></TextBlock>
                            </StackPanel>
                            <StackPanel  Canvas.Top="140" Canvas.Left="0" Width="190">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock FontFamily="Montserrat" Text="Số lượng còn lại: " Canvas.Left="37" Canvas.Top="151"></TextBlock>
                                    <TextBlock  FontFamily="Montserrat" Text="{Binding SoLuong}" Canvas.Left="135" Canvas.Top="152"></TextBlock>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Canvas.Top="155" Canvas.Left="0" Width="190">
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <TextBlock FontFamily="Montserrat" Foreground="Red" FontWeight="Bold" Text="{Binding DonGia}"></TextBlock>
                                    <TextBlock FontFamily="Montserrat" Foreground="Red" FontWeight="Bold" Text=" VND"></TextBlock>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel  Canvas.Left="0" Canvas.Top="180" Width="190">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="0.423,0.466">
                                    <Button Width="50" Click="GiamSoLuong">
                                        <materialDesign:PackIcon  Kind="Minus" />
                                    </Button>
                                    <StackPanel Background="#eff0f1" Width="50">
                                        <TextBlock TextAlignment="Center" Height="20" Width="20" Text="{Binding SoLuongDuocChon}" Margin="0 7 0 0"/>
                                    </StackPanel>
                                    <Button Width="50" Click="TangSoLuong">
                                        <materialDesign:PackIcon Kind="Add" />
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Canvas>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
