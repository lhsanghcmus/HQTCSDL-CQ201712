<Page x:Class="GUI.QuanLyLoi"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuanLyLoi">

    <Grid>
        <StackPanel>
            <StackPanel Margin="0 30 0 0" Orientation="Horizontal">
                <Label>Fix các lỗi truy xuất đồng thời: </Label>
                <CheckBox x:Name="fixTruySuat" Click="FixTruySuat_Click"></CheckBox>
            </StackPanel>
            <StackPanel Margin="0 30 0 0" Orientation="Horizontal">
                <Label>Fix lỗi deadlock:</Label>
                <CheckBox x:Name="fixDeadlock" Click="FixDeadlock_Click"></CheckBox>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
